<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewExerciseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.ExerciseTitle"/>

        <ImageView
            android:id="@+id/imageViewExercise"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"
            android:background="@color/surface"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание"
            style="@style/TextAppearance.App.ExerciseSubtitle"/>

        <TextView
            android:id="@+id/textViewExerciseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.ExerciseText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Техника выполнения"
            style="@style/TextAppearance.App.ExerciseSubtitle"/>

        <TextView
            android:id="@+id/textViewTechnique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.ExerciseText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Целевые мышцы"
            style="@style/TextAppearance.App.ExerciseSubtitle"/>

        <TextView
            android:id="@+id/textViewTargetMuscles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.ExerciseText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Распространенные ошибки"
            style="@style/TextAppearance.App.ExerciseSubtitle"/>

        <TextView
            android:id="@+id/textViewCommonMistakes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.ExerciseText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рекомендации"
            style="@style/TextAppearance.App.ExerciseSubtitle"/>

        <TextView
            android:id="@+id/textViewRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.ExerciseText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подходы и повторения"
            style="@style/TextAppearance.App.ExerciseSubtitle"/>

        <TextView
            android:id="@+id/textViewSets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.ExerciseText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Противопоказания"
            style="@style/TextAppearance.App.ExerciseSubtitle"/>

        <TextView
            android:id="@+id/textViewContraindications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.ExerciseText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Альтернативные упражнения"
            style="@style/TextAppearance.App.ExerciseSubtitle"/>

        <TextView
            android:id="@+id/textViewAlternatives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.ExerciseText"/>

        <Button
            android:id="@+id/buttonWatchVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="СМОТРЕТЬ ВИДЕО"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView> 