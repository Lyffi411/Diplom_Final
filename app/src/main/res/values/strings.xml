    <!-- Обновленные стили для таблиц -->
    <style name="TableHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#2A3F5F</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TableCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cell_border</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>

    </style>

    <!-- Светлая тема -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantLight</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryLight</item>

        <item name="android:windowBackground">@color/colorBackgroundLight</item>
        <item name="colorOnBackground">@color/colorOnBackgroundLight</item>
    </style>

    <!-- Темная тема -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDark</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="colorOnBackground">@color/colorOnBackgroundDark</item>
    </style>
    <!-- Стиль для четных строк -->
    <style name="TableRowEven">
        <item name="android:background">#F8F9FA</item>
    </style>

    <!-- Стиль для нечетных строк -->
    <style name="TableRowOdd">
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Стиль для ховера строк -->
    <style name="TableRowHover">
        <item name="android:background">#9C9C9C</item>
    </style>

    <!-- Стиль для заголовков разделов -->
